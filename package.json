{
  "private": true,
  "description": "metarepo",
  "workspaces": [
    "packages/auto/*",
    "packages/autoprops",
    "packages/bsc",
    "packages/codecov-lite",
    "packages/copie",
    "packages/dleet",
    "packages/ekst",
    "packages/fixdeps",
    "packages/graphiq",
    "packages/import-wasm",
    "packages/makethen",
    "packages/mnth",
    "packages/mock/*",
    "packages/move-path",
    "packages/nextools/*",
    "packages/perfa",
    "packages/piall",
    "packages/pifs",
    "packages/rebox/*",
    "packages/refun",
    "packages/rn-fonts",
    "packages/rplace",
    "packages/rsolve",
    "packages/siza",
    "packages/spyfn",
    "packages/spyt",
    "packages/start/*",
    "packages/stroki",
    "packages/syntx",
    "packages/tsfn",
    "packages/typeon",
    "packages/unchunk",
    "packages/weslint",
    "packages/workerama",
    "packages/x-ray/*",
    "packages/xrom"
  ],
  "devDependencies": {
    "@nextools/eslint-config": "*",
    "@nextools/start-preset": "*",
    "@nextools/typescript-config": "*",
    "@start/plugin": "*",
    "@types/node": "^13.5.0",
    "@x-ray/ui": "*",
    "colorido": "*",
    "core-js": "^3.2.1",
    "eslint": "^6.1.0",
    "graphiq": "*",
    "react": "^16.8.6",
    "react-native": "0.62.0",
    "tsfn": "*",
    "typescript": "^3.8.0"
  },
  "scripts": {
    "start": "packages/nextools/start-preset/src/cli/index.js"
  },
  "start": {
    "file": "tasks/",
    "auto": {
      "shouldMakeGitTags": true,
      "shouldSendTelegramMessage": false,
      "shouldWriteChangelogFiles": true
    }
  },
  "auto": {
    "bump": {
      "initialType": "minor",
      "zeroBreakingChangeType": "minor"
    },
    "npm": {
      "publishSubDirectory": "build",
      "access": "public"
    },
    "prefixes": {
      "major": "💥",
      "minor": "🌱",
      "patch": "🐞",
      "publish": "📦",
      "dependencies": "♻️",
      "initial": "🐣",
      "lint": "🚷",
      "test": "👾",
      "docs": "📝",
      "refactor": "🛠",
      "wip": "🚧",
      "screenshots": "📸"
    },
    "commit": {
      "major": "Breaking Change",
      "minor": "New feature",
      "patch": "Bugfix",
      "initial": "Initial",
      "depepdencies": "Dependencies",
      "lint": "Lint",
      "test": "Test",
      "docs": "Docs",
      "refactor": "Refactor",
      "wip": "WIP",
      "screenshots": "Snapshots / Screenshots"
    }
  },
  "eslintConfig": {
    "extends": "@nextools/eslint-config"
  },
  "eslintIgnore": [
    "build/",
    "coverage/",
    "node_modules/"
  ],
  "renovate": {
    "commitMessagePrefix": "♻️",
    "commitMessageAction": "update",
    "commitMessageTopic": "{{depName}}",
    "ignoreDeps": [
      "gradle",
      "typescript"
    ],
    "packageRules": [
      {
        "packageNames": [
          "@types/node"
        ],
        "allowedVersions": "<12"
      }
    ]
  },
  "engines": {
    "node": ">=10.13.0"
  }
}
